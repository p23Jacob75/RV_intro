<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miwok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Fruits_Activity"
            android:label="@string/category_fruits"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".Colors_Activity"
            android:label="@string/category_colors"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".Birthdays_Activity"
            android:label="@string/category_birthdays"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".Singles_Activity"
            android:label="@string/category_singles"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".Members_Activity"
            android:label="@string/category_members"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>